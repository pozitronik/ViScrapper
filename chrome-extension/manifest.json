{
  "manifest_version": 3,
  "name": "VIParser - Multi-Site Product Parser",
  "version": "2.7.5.1",
  "description": "Автоматический парсер продуктов с Victoria's Secret, Calvin Klein, Carter's, Tommy Hilfiger и H&M для VIParser",
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://www.victoriassecret.com/*",
    "https://www.calvinklein.us/*",
    "https://www.carters.com/*",
    "https://usa.tommy.com/*",
    "https://www.hm.com/*",
    "https://www2.hm.com/*",
    "https://us.hm.com/*",
    "https://uk.hm.com/*",
    "http://localhost:8000/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://www.victoriassecret.com/*",
        "https://www.calvinklein.us/*",
        "https://www.carters.com/*",
        "https://usa.tommy.com/*",
        "https://www.hm.com/*",
        "https://www2.hm.com/*",
        "https://us.hm.com/*",
        "https://uk.hm.com/*"
      ],
      "js": [
        "shared/site-detector.js",
        "parsers/BaseParser.js",
        "parsers/VictoriasSecretParser.js",
        "parsers/CalvinKleinParser.js",
        "parsers/CartersParser.js",
        "parsers/TommyHilfigerParser.js",
        "parsers/HMParser.js",
        "parsers/ParserFactory.js",
        "parsers/index.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "VIParser"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "commands": {
    "open-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Open VIParser side panel"
    },
    "toggle-viparser": {
      "suggested_key": {
        "default": "Alt+V",
        "mac": "Alt+V"
      },
      "description": "Toggle VIParser (popup or side panel)"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": [
        "https://www.victoriassecret.com/*",
        "https://www.calvinklein.us/*",
        "https://www.carters.com/*",
        "https://usa.tommy.com/*",
        "https://www.hm.com/*",
        "https://www2.hm.com/*",
        "https://us.hm.com/*",
        "https://uk.hm.com/*"
      ]
    }
  ]
}
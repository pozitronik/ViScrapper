# Database Configuration
POSTGRES_DB=viparser
POSTGRES_USER=viparser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://viparser:your_secure_password_here@localhost:5432/viparser

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production-must-be-at-least-32-characters
DEBUG=false

# Server Configuration
BACKEND_PORT=8000
HOST=0.0.0.0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Feature Flags
BACKUP_ENABLED=true
TELEGRAM_ENABLED=false
WEBSOCKET_ENABLED=true

# File Storage
UPLOAD_DIR=./images
BACKUP_DIR=./backups
MAX_FILE_SIZE=10485760

# Telegram Configuration (if enabled)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# External Services
API_RATE_LIMIT=100
REQUEST_TIMEOUT=30

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Nginx (for production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Backup Settings
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_INTERVAL=24

# Performance
WORKER_PROCESSES=1
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=5